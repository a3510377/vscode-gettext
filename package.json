{
  "name": "gettext",
  "displayName": "vscode-gettext",
  "description": "Gettext PO files language support for Visual Studio Code",
  "version": "0.0.2",
  "license": "GPL-3.0 license",
  "private": true,
  "publisher": "gettext",
  "icon": "./assets/vscode-gettext-logo.png",
  "author": {
    "name": "monkey",
    "url": "https://a3510377.github.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a3510377/vscode-gettext"
  },
  "bugs": {
    "url": "https://github.com/a3510377/vscode-gettext/issues"
  },
  "sponsor": {
    "url": "https://github.com/a3510377/vscode-gettext"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:pot"
  ],
  "main": "./out/main.js",
  "contributes": {
    "languages": [
      {
        "id": "po",
        "aliases": [
          "gettext",
          "po"
        ],
        "extensions": [
          ".po",
          ".pot"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "po",
        "scopeName": "source.po",
        "path": "./syntaxes/po.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "po",
        "scopes": {
          "po-auto-format-placeholder": [
            "constant.character.format.placeholder.other.po",
            "meta.format.percent.po",
            "string.quoted.single.po",
            "meta.function-call.arguments.po",
            "meta.function-call.po",
            "source.po"
          ],
          "po-auto-storage-format": [
            "storage.type.format.po",
            "constant.character.format.placeholder.other.po",
            "meta.format.brace.po",
            "string.quoted.single.po",
            "meta.function-call.arguments.po",
            "meta.function-call.po",
            "source.po"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.192",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "pofile": "^1.1.4"
  }
}
