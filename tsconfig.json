{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["test"],
  "include": ["./src/**/*.ts"]
}
